{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false --browsers=ChromeHeadlessCustom",
    "test:watch": "ng test",
    "setupTestDB:backend": "docker-compose -f docker-compose.test.yml up -d mongodb_container",
    "test:backend": "jest backend --config=backend/jest.config.js",
    "stopTestDB:backend": "docker-compose -f docker-compose.test.yml stop",
    "start:server": "nodemon backend/dist/backend/src/app.js",
    "compile:server": "tsc -p backend -w"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "express": "^4.17.1",
    "mongoose": "^6.0.7",
    "ngx-bootstrap": "^7.1.0",
    "nodemon": "^2.0.12",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.1",
    "@angular/cli": "~12.2.1",
    "@angular/compiler-cli": "~12.2.0",
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.8.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.20.26",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "eslint": "^7.32.0",
    "jasmine-core": "~3.8.0",
    "jest": "^27.2.1",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "node-mocks-http": "^1.10.1",
    "puppeteer": "^10.2.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "~4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array"
        }
      ],
      "@typescript-eslint/semi": [
        "warn",
        "always"
      ],
      "@typescript-eslint/no-inferrable-types": 0,
      "@typescript-eslint/no-empty-function": "off",
      "max-len": [
        "warn",
        {
          "code": 120
        }
      ],
      "no-trailing-spaces": [
        "warn",
        {
          "skipBlankLines": true
        }
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 2
        }
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "no-multi-spaces": [
        "warn"
      ],
      "eqeqeq": [
        "warn"
      ],
      "space-infix-ops": [
        "warn"
      ]
    }
  }
}
